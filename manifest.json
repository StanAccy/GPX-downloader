{
  "manifest_version": 2,

  "name": "GPX Downloader",
  "description": "This extension adds a GPX download button for the connect.garmin.com courses.",
  "version": "1.2",

  "browser_action": {
    "default_icon": "download.png",
	"default_title": "GPX Downloader"
  },
  
 "content_scripts" : [
    {
      "matches" : [ "http://connect.garmin.com/course/*", "http://connect.garmin.com/modern/course/*" ],
      "js" : [ "contentscript.js" ],
      "run_at" : "document_end",
      "all_frames" : false
    }
  ]
}
